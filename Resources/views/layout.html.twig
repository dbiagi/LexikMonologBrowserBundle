<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        {#<link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.0/css/bootstrap.css" rel="stylesheet">#}
        {#<link href="{{ asset('bundles/lexikmonologbrowser/css/datepicker.css') }}" rel="stylesheet">#}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css"/>
        <link href="{{ asset('bundles/lexikmonologbrowser/css/log.css') }}" rel="stylesheet">
        <title>{% block title %} Monolog Browser {% endblock %}</title>

        <script type="text/javascript">
            window.log_browser_options = {
                locale: '{{ app.request.locale }}'
            }
        </script>
    </head>
    <body>
        {% block monolog_browser_navbar %}{% endblock %}

        <div class="container wrapper">
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert bg-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block monolog_browser_content %}{% endblock %}
        </div>

        <script src="//code.jquery.com/jquery.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>
        <script src="{{ asset('bundles/lexikmonologbrowser/js/log.js') }}"></script>
    </body>
</html>
